CREATE TABLE `BBS_NTT` (
  `NTT_ID` int(11) NOT NULL AUTO_INCREMENT,
  `BBS_ID` int(11) NOT NULL,
  `NTT_NO` decimal(20,0) DEFAULT NULL,
  `NTT_SJ` varchar(2000) DEFAULT NULL,
  `NTT_CN` mediumtext,
  `NTT_LINK` varchar(2000) DEFAULT NULL,
  `ANSWER_YN` char(1) DEFAULT NULL,
  `P_NTT_ID` int(11) DEFAULT NULL,
  `ANSWER_LC` int(8) DEFAULT NULL,
  `SORT_ORDR` decimal(8,0) DEFAULT NULL,
  `RDCNT` decimal(10,0) DEFAULT NULL,
  `USE_YN` char(1) NOT NULL,
  `ATCH_FILE_ID` char(32) DEFAULT NULL,
  `REGI_DATE` datetime NOT NULL,
  `REGI_ID` int(11) NOT NULL,
  `UPDT_DATE` datetime DEFAULT NULL,
  `UPDT_ID` int(11) DEFAULT NULL,
  `LIKE_ID` int(11) DEFAULT NULL,
  PRIMARY KEY (`NTT_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;



CREATE TABLE `BBS_MST` (
  `BBS_ID` int(11) NOT NULL AUTO_INCREMENT,
  `BBS_NM` varchar(255) NOT NULL,
  `BBS_TYPE_CODE` char(6) NOT NULL,
  `BBS_ATTR_CODE` char(6) NOT NULL,
  `ANSWER_POSBL_YN` char(1) DEFAULT NULL,
  `COMNT_POSBL_YN` char(1) DEFAULT NULL,
  `FILE_ATCH_POSBL_YN` char(1) NOT NULL,
  `ATCH_POSBL_FILE_NUMBER` decimal(2,0) NOT NULL,
  `ATCH_POSBL_FILE_SIZE` decimal(8,0) DEFAULT NULL,
  `USE_YN` char(1) NOT NULL,
  `TMPLAT_ID` char(20) DEFAULT NULL,
  `REGI_DATE` datetime DEFAULT NULL,
  PRIMARY KEY (`BBS_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `BBS_COMMENT` (
  `NTT_ID` int(11) NOT NULL AUTO_INCREMENT,
  `P_NTT_ID` int(11) NOT NULL,
  `TO_USER_ID` int(11) DEFAULT NULL,
  `NTT_CN` mediumtext,
  `ANSWER_YN` char(1) DEFAULT NULL,
  `SORT_ORDR` decimal(8,0) DEFAULT NULL,
  `USE_YN` char(1) NOT NULL,
  `ATCH_FILE_ID` char(32) DEFAULT NULL,
  `REGI_DATE` datetime NOT NULL,
  `REGI_ID` int(11) NOT NULL,
  `UPDT_DATE` datetime DEFAULT NULL,
  `UPDT_ID` int(11) DEFAULT NULL,
  `LIKE_ID` int(11) DEFAULT NULL,
  PRIMARY KEY (`NTT_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


CREATE TABLE `FILE_LIST` (
  `ATCH_FILE_ID` char(40) NOT NULL,
  `CREAT_DT` datetime DEFAULT NULL,
  `USE_YN` char(1) DEFAULT NULL,
  PRIMARY KEY (`ATCH_FILE_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


CREATE TABLE `FILE_DETAIL` (
  `SEQ` int(11) NOT NULL AUTO_INCREMENT,
  `ATCH_FILE_ID` char(32) NOT NULL,
  `FILE_SN` decimal(10,0) NOT NULL,
  `FILE_STRE_COURS` varchar(2000) NOT NULL,
  `STRE_FILE_NM` char(32) NOT NULL,
  `ORIGNL_FILE_NM` varchar(255) DEFAULT NULL,
  `FILE_EXTSN` varchar(100) NOT NULL,
  `FILE_CN` mediumtext,
  `FILE_SIZE` decimal(8,0) DEFAULT NULL,
  PRIMARY KEY (`SEQ`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


CREATE TABLE `NOK_ROLE` (
  `SEQ` int(11) NOT NULL AUTO_INCREMENT,
  `ROLE` varchar(20) NOT NULL,
  `REGI_DATE` datetime DEFAULT NULL,
  PRIMARY KEY (`SEQ`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


CREATE TABLE `NOK_USER` (
  `SEQ` int(11) NOT NULL AUTO_INCREMENT,
  `USER_ID` varchar(40) NOT NULL,
  `EMAIL` varchar(40) NOT NULL,
  `NAME` varchar(20) NOT NULL,
  `STATUS` char(1) NOT NULL,
  `PASSWORD` varchar(255) NOT NULL,
  `ATCH_FILE_ID` varchar(32) DEFAULT NULL,
  PRIMARY KEY (`SEQ`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


CREATE TABLE `NOK_USER_ROLE` (
  `SEQ` int(11) NOT NULL AUTO_INCREMENT,
  `USER` int(11) NOT NULL,
  `ROLE` int(11) NOT NULL,
  `REGI_DATE` datetime DEFAULT NULL,
  PRIMARY KEY (`SEQ`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


